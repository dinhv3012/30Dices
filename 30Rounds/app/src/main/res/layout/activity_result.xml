<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".controller.ResultActivity">

    <TextView
        android:id="@+id/score_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Score: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 4: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 5: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 6: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 7: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 8: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 9: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 10: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 11: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/score_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score 12: 0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Score: 0"
        android:textSize="18sp" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Game"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="16dp" />

</LinearLayout>

